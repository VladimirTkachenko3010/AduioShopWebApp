@{
    ViewData["Title"] = "Адмін-панель";
}

<div class="container mt-5">
    <h2 class="text-center">Сторінка адміністратора</h2>

    @if (ViewBag.IsAdmin)
    {
        <p class="text-success text-center">Ви увійшли як адміністратор.</p>

        <div class="d-flex justify-content-center mt-4">
            <a asp-controller="Admin" asp-action="AddProduct" class="btn btn-primary mx-2">Додати товар</a>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <input type="text" id="productId" class="form-control w-25 mx-2" placeholder="Введіть ID товару" />
        </div>

        <div class="d-flex justify-content-center mt-2">
            <a id="editProductButton" class="btn btn-warning mx-2">Редагувати товар</a>
            <a id="deleteProductButton" class="btn btn-danger mx-2">Видалити товар</a>
        </div>
    }
    else
    {
        <p class="text-danger text-center">У вас недостатньо прав для перегляду цієї сторінки.</p>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('editProductButton').addEventListener('click', function () {
            var productId = document.getElementById('productId').value;
            if (productId) {
                window.location.href = '/Admin/EditProduct/' + productId;
            } else {
                alert('Будь ласка, введіть ID товару.');
            }
        });

        document.getElementById('deleteProductButton').addEventListener('click', function () {
            var productId = document.getElementById('productId').value;
            if (productId) {
                window.location.href = '/Admin/DeleteProduct/' + productId;
            } else {
                alert('Будь ласка, введіть ID товару.');
            }
        });
    </script>
}
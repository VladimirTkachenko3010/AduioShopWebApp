@model IEnumerable<AudioShop.Data.Models.Category>

<h1>All Categories</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Type</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.ProductType</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@category.Id">Edit</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateCategory">Create New</a>
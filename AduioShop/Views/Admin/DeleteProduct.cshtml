@model AudioShop.ViewModels.ProductEditViewModel

<h2>Удаление продукта</h2>

<form asp-action="DeleteProduct" method="post">
    <div class="form-group">
        <label asp-for="Product.Id"></label>
        <input asp-for="Product.Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control" readonly></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Удалить продукт</button>
</form>

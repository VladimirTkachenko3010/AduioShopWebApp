@model AudioShop.ViewModels.ProductEditViewModel

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Product.Id"></label>
        <input asp-for="Product.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductType"></label>
        <input asp-for="Product.ProductType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Brand"></label>
        <input asp-for="Product.Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Product.ShortDesc"></label>
        <input asp-for="Product.ShortDesc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Img"></label>
        <input asp-for="Product.Img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.IsFavorite"></label>
        <input asp-for="Product.IsFavorite" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label asp-for="Product.IsAvailible"></label>
        <input asp-for="Product.IsAvailible" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId"></label>
        <input asp-for="Product.CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Category"></label>
        <input asp-for="Product.Category" class="form-control" />
    </div>

    <div class="mt-3">
            <input type="file" name="productImages" multiple />
    </div>
    <!-- Форма для удаления изображений -->
    @if (Model.Product.ImageUrls != null)
    {
        <div class="mt-3">
                @for (int i = 0; i < Model.Product.ImageUrls.Count; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="DeletedImageUrls[@i]" value="true" id="imageCheck@(i)">
                        <label class="form-check-label" for="imageCheck@(i)">
                        <img src="@Url.Content(Model.Product.ImageUrls[i].ImageUrls)" alt="Product Image" style="max-width: 100px;" />
                        </label>
                    </div>
                }
        </div>
    }


    @* <div class="form-group">
        <label asp-for="DeletedImageUrls" class="control-label"></label>
        @for (var i = 0; i < Model.DeletedImageUrls.Count; i++)
        {
            <div>
                <input type="checkbox" asp-for="@Model.DeletedImageUrls[i]" />
                <label asp-for="@Model.DeletedImageUrls[i]">@Model.Product.ImageUrls[i]</label>
            </div>
        }
    </div>

    <!-- Поле для загрузки новых изображений -->
    <div class="form-group">
        <label asp-for="NewImages" class="control-label"></label>
        <input asp-for="NewImages" type="file" multiple class="form-control-file" />
    </div> *@

    @if (ViewBag.ErrorMessages != null && ViewBag.ErrorMessages.Count > 0)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewBag.ErrorMessages)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

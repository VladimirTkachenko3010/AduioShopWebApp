 @model AudioShop.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "Видалення продукту";
}

<div class="container delete-product-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-danger">Видалення продукту</h2>
            <form asp-action="DeleteProduct" method="post">
                <div class="form-group">
                    <label asp-for="Product.Id" class="control-label">ID продукту</label>
                    <input asp-for="Product.Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Product.Name" class="control-label">Назва</label>
                    <input asp-for="Product.Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Product.ShortDesc" class="control-label">Короткий опис</label>
                    <textarea asp-for="Product.ShortDesc" class="form-control" readonly></textarea>
                </div>

                <button type="submit" class="btn btn-danger btn-block">Видалити продукт</button>
            </form>

            @if (ViewBag.ErrorMessages != null && ViewBag.ErrorMessages.Count > 0)
            {
                <div class="alert alert-danger mt-3">
                    <ul>
                        @foreach (var error in ViewBag.ErrorMessages)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>









